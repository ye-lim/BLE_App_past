<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">


        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@xml/main_bnt">


            <ImageButton
                android:layout_width="253dp"
                android:layout_height="276.98dp"
                android:background="@drawable/machine"
                android:src="@xml/main_bnt"
                android:layout_marginBottom="20dp"/>

            <ImageView
                android:layout_width="190dp"
                android:layout_height="190dp"
                android:layout_marginLeft="-60dp"
                android:layout_marginTop="-55dp"
                android:background="@drawable/blutooh" />

            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="100dp"
                android:gravity="center"
                android:text="머신 연결 상태"
                android:textColor="@color/black"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/connection_state"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="60dp"
                android:gravity="center_horizontal"
                android:text="연결안됨"
                android:textColor="#0055ff"
                android:textSize="30dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="187dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="53dp"
                        android:layout_height="30dp"
                        android:background="#b369BD82"
                        android:gravity="center"
                        android:text="상태"
                        android:textColor="#3A404C" />

                    <TextView
                        android:id="@+id/state"
                        android:layout_width="141dp"
                        android:layout_height="30dp"
                        android:background="#b3ffffff"
                        android:gravity="center"
                        android:textColor="#3A404C"
                        android:textSize="16dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="53dp"
                        android:layout_height="30dp"
                        android:background="#b369BD82"
                        android:gravity="center"
                        android:text="온도"
                        android:textColor="#3A404C" />

                    <TextView
                        android:id="@+id/temper"
                        android:layout_width="141dp"
                        android:layout_height="30dp"
                        android:background="#b3ffffff"
                        android:gravity="center"
                        android:textColor="#3A404C"
                        android:textSize="16dp" />


                </LinearLayout>
            </LinearLayout>

        </FrameLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:id="@+id/lin_login"
        android:background="@xml/login_background"
        android:orientation="vertical">

        <LinearLayout
            android:layout_marginTop="40dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <android.support.v7.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@xml/main_bnt">

                    <ImageView
                        android:layout_width="175dp"
                        android:layout_height="150dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="-45dp"
                        android:background="@drawable/icon2"/>

                    <TextView
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:text="예열"
                        android:gravity="center"
                        android:textSize="15dp"
                        android:textColor="@color/black"
                        android:layout_gravity="center"
                        android:layout_marginBottom="-25dp"/>

                </FrameLayout>

            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp">

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@xml/main_bnt">

                    <ImageView
                        android:layout_width="175dp"
                        android:layout_height="150dp"
                        android:layout_marginTop="-45dp"
                        android:background="@drawable/icon1"
                        android:layout_gravity="center_horizontal"
                        />
                    <TextView
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:text="추출"
                        android:gravity="center"
                        android:textSize="15dp"
                        android:textColor="@color/black"
                        android:layout_gravity="center"
                        android:layout_marginBottom="-25dp"
                        />
                </FrameLayout>

            </android.support.v7.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="10dp">

            <android.support.v7.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@xml/main_bnt">

                    <ImageView
                        android:layout_width="175dp"
                        android:layout_height="150dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="-45dp"
                        android:background="@drawable/icon2"/>

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:text="제품별 추출"
                        android:gravity="center"
                        android:textSize="15dp"
                        android:textColor="@color/black"
                        android:layout_gravity="center"
                        android:layout_marginBottom="-25dp"/>

                </FrameLayout>

            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp">

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@xml/main_bnt">

                    <ImageView
                        android:layout_width="175dp"
                        android:layout_height="150dp"
                        android:layout_marginTop="-45dp"
                        android:background="@drawable/icon1"
                        android:layout_gravity="center_horizontal"
                        />
                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:text="추출량 변화"
                        android:gravity="center"
                        android:textSize="15dp"
                        android:textColor="@color/black"
                        android:layout_gravity="center"
                        android:layout_marginBottom="-25dp"
                        />
                </FrameLayout>

            </android.support.v7.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="10dp">

            <android.support.v7.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@xml/main_bnt">

                    <ImageView
                        android:layout_width="175dp"
                        android:layout_height="150dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="-45dp"
                        android:background="@drawable/icon2"/>

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:text="절전모드"
                        android:gravity="center"
                        android:textSize="15dp"
                        android:textColor="@color/black"
                        android:layout_gravity="center"
                        android:layout_marginBottom="-25dp"/>

                </FrameLayout>

            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp">

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@xml/main_bnt">

                    <ImageView
                        android:layout_width="175dp"
                        android:layout_height="150dp"
                        android:layout_marginTop="-45dp"
                        android:background="@drawable/icon1"
                        android:layout_gravity="center_horizontal"
                        />
                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:text="추출중지"
                        android:gravity="center"
                        android:textSize="15dp"
                        android:textColor="@color/black"
                        android:layout_gravity="center"
                        android:layout_marginBottom="-25dp" />

                </FrameLayout>

            </android.support.v7.widget.CardView>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>

