   <LinearLayout android:layout_height="wrap_content" android:layout_width="match_parent" android:orientation="vertical" android:layout_marginTop="25dp" android:layout_marginLeft="20dp">

    <TextView android:layout_height="wrap_content" android:layout_width="match_parent" android:textSize="25dp" android:layout_marginBottom="10dp" android:textColor="@color/black" android:text="휴대전화"/>


    <LinearLayout android:layout_height="wrap_content" android:layout_width="match_parent">

    <EditText android:layout_height="7mm" android:layout_width="35mm" android:background="@xml/join_main" android:id="@+id/phone_number" android:textSize="18dp" android:textColor="@color/join_edit" android:hint="ex) 010-0000-0000" android:paddingLeft="10dp"/>

    <Button android:layout_height="7mm" android:layout_width="21mm" android:background="@xml/join_main_sex" android:layout_marginLeft="10dp" android:textSize="18dp" android:textColor="@color/white" android:text="인증번호 받기"/>

</LinearLayout>

</LinearLayout>

