<?xml version="1.0" encoding="UTF-8"?>

    <ScrollView xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_height="match_parent" android:layout_width="match_parent" xmlns:android="http://schemas.android.com/apk/res/android">


    <LinearLayout android:layout_height="match_parent" android:layout_width="match_parent" android:orientation="vertical">

    <android.support.v7.widget.Toolbar android:layout_height="wrap_content" android:layout_width="match_parent" app:popupTheme="@style/ThemeOverlay.AppCompat.Dark.ActionBar" android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar" android:background="@color/join" android:id="@+id/toolbar"/>


   <LinearLayout android:layout_height="wrap_content" android:layout_width="match_parent" android:orientation="vertical" android:layout_marginTop="25dp" android:layout_marginLeft="20dp">

    <TextView android:layout_height="wrap_content" android:layout_width="match_parent" android:textSize="25dp" android:layout_marginBottom="10dp" android:textColor="@color/black" android:text="성명"/>

    <EditText android:layout_height="7mm" android:layout_width="52mm" android:background="@xml/join_main" android:id="@+id/user_name" android:textSize="18dp" android:textColor="@color/join_edit" android:hint="성명을 입력해주세요" android:paddingLeft="10dp"/>

</LinearLayout>


   <LinearLayout android:layout_height="wrap_content" android:layout_width="match_parent" android:orientation="vertical" android:layout_marginTop="25dp" android:layout_marginLeft="20dp">

    <TextView android:layout_height="wrap_content" android:layout_width="match_parent" android:textSize="25dp" android:layout_marginBottom="10dp" android:textColor="@color/black" android:text="아이디"/>


    <LinearLayout android:layout_height="wrap_content" android:layout_width="match_parent">

    <EditText android:layout_height="7mm" android:layout_width="35mm" android:background="@xml/join_main" android:id="@+id/user_id" android:textSize="18dp" android:textColor="@color/join_edit" android:hint="아이디를 지정해주세요" android:paddingLeft="10dp"/>

    <Button android:layout_height="7mm" android:layout_width="21mm" android:background="@xml/join_main_sex" android:id="@+id/idoverlap" android:layout_marginLeft="10dp" android:textSize="18dp" android:textColor="@color/white" android:text="아이디 중복 확인"/>

</LinearLayout>

</LinearLayout>


   <LinearLayout android:layout_height="wrap_content" android:layout_width="match_parent" android:orientation="vertical" android:layout_marginTop="25dp" android:layout_marginLeft="20dp">

    <TextView android:layout_height="wrap_content" android:layout_width="match_parent" android:textSize="25dp" android:layout_marginBottom="10dp" android:textColor="@color/black" android:text="비밀번호"/>

    <EditText android:layout_height="7mm" android:layout_width="52mm" android:background="@xml/join_main" android:id="@+id/user_pw" android:textSize="18dp" android:textColor="@color/join_edit" android:hint="비밀번호를 지정해주세요" android:paddingLeft="10dp"/>

</LinearLayout>


    <LinearLayout android:layout_height="wrap_content" android:layout_width="match_parent" android:orientation="vertical" android:layout_marginTop="25dp" android:layout_marginLeft="20dp">

    <TextView android:layout_height="wrap_content" android:layout_width="match_parent" android:textSize="25dp" android:layout_marginBottom="10dp" android:textColor="@color/black" android:text="비밀번호 재입력"/>

    <EditText android:layout_height="7mm" android:layout_width="52mm" android:background="@xml/join_main" android:id="@+id/userpwdck" android:textSize="18dp" android:textColor="@color/join_edit" android:hint="동일한 비밀번호를 재입력해주세요" android:paddingLeft="10dp"/>

</LinearLayout>


    <LinearLayout android:layout_height="wrap_content" android:layout_width="match_parent" android:orientation="vertical" android:layout_marginTop="25dp" android:layout_marginLeft="20dp">

    <TextView android:layout_height="wrap_content" android:layout_width="match_parent" android:textSize="25dp" android:layout_marginBottom="10dp" android:textColor="@color/black" android:text="성별"/>


    <LinearLayout android:layout_height="wrap_content" android:layout_width="match_parent" android:gravity="center">

    <Button android:layout_height="wrap_content" android:layout_width="160dp" android:background="@xml/join_main_sex" android:id="@+id/man" android:textSize="16dp" android:textColor="@color/white" android:text="남 자" android:onClick="sex"/>

    <Button android:layout_height="wrap_content" android:layout_width="160dp" android:background="@xml/join_main_sex2" android:id="@+id/woman" android:layout_marginLeft="20dp" android:textSize="16dp" android:textColor="#a606234E" android:text="여 자" android:onClick="sex"/>

</LinearLayout>

</LinearLayout>


    <LinearLayout android:layout_height="wrap_content" android:layout_width="match_parent" android:orientation="vertical" android:layout_marginTop="25dp" android:layout_marginLeft="20dp">

    <TextView android:layout_height="wrap_content" android:layout_width="match_parent" android:textSize="25dp" android:layout_marginBottom="10dp" android:textColor="@color/black" android:text="생년월일"/>


   <LinearLayout android:layout_height="wrap_content" android:layout_width="match_parent" android:layout_marginRight="50dp">

    <EditText android:layout_height="50dp" android:layout_width="80dp" android:background="@xml/join_main" android:id="@+id/year" android:textSize="16dp" android:textColor="@color/join_edit" android:hint="년도" android:gravity="center" android:layout_weight="1"/>

    <EditText android:layout_height="50dp" android:layout_width="80dp" android:background="@xml/join_main" android:id="@+id/month" android:layout_marginLeft="10dp" android:textSize="16dp" android:textColor="@color/join_edit" android:hint="월" android:gravity="center" android:layout_weight="1"/>

    <EditText android:layout_height="50dp" android:layout_width="80dp" android:background="@xml/join_main" android:id="@+id/day" android:layout_marginLeft="10dp" android:textSize="16dp" android:textColor="@color/join_edit" android:hint="일" android:gravity="center" android:layout_weight="1"/>

</LinearLayout>

</LinearLayout>

