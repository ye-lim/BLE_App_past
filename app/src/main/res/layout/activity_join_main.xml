    <LinearLayout android:layout_height="match_parent" android:layout_width="match_parent" android:layout_marginTop="20dp" android:gravity="bottom">
    <Button android:layout_height="64dp" android:layout_width="match_parent" android:background="@color/join" android:id="@+id/next" android:textSize="21dp" android:textColor="@color/white" android:text="완 료" android:onClick="next"/>

</LinearLayout>

</LinearLayout>

</ScrollView>