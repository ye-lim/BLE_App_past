<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/loading_frame_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="10"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:gravity="center">

        <LinearLayout
            android:layout_margin="80dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@color/white">

            <ImageView
                android:id="@+id/iv_frame_loading"
                android:layout_width="100dp"
                android:layout_height="120dp"
                android:background="@drawable/frame_loading"/>

            <TextView
                android:id="@+id/tv_progress_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:textSize="15dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#414141"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text = "추출하는 중 입니다."
                android:textColor="#414141"
                android:textSize="15dp"
                android:gravity="center"/>

            <Button
                android:id="@+id/stop_Btn"
                android:onClick="stopclicked"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:layout_marginTop="8dp"
                android:text="추출 중지"
                android:textColor="#414141"
                android:textSize="15dp"
                android:textStyle="bold"
                android:background="@xml/disconnect"/>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>