<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer"
    android:layout_width="310dp"
    android:layout_height="match_parent"
    android:layout_gravity="start"
    android:orientation="vertical"
    android:background="#ffffff"
    android:padding="5dp" >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="WELCOME"
        android:layout_marginTop="20dp"
        android:textSize="25dp"
        android:layout_marginLeft="10dp"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="안녕하세요 송서원 고객님"
        android:textSize="15dp"
        android:layout_gravity="bottom"
        />
        <Button
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:text="LOGOUT"
            android:textSize="17dp"
            android:layout_marginLeft="13dp"
            android:textColor="#ffffff"
            android:background="#6F6F6F"/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="머신 정보"
        android:textSize="25dp"
        android:layout_marginTop="60dp"
        android:gravity="center_horizontal"
        />
    <TextView
        android:layout_width="290dp"
        android:layout_gravity="center_horizontal"
        android:layout_height="2dp"
        android:layout_marginTop="5dp"
        android:background="#80838486"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:layout_marginTop="10dp">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="연결상태"
            android:textColor="#3A404C"
            android:layout_gravity="center"
            android:textSize="18dp"/>
        <TextView
            android:id="@+id/draw_connect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="#3A404C"
            android:textStyle="bold"
            android:textSize="20dp"/>
    </LinearLayout>
        <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="15dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="머신상태"
            android:textColor="#3A404C"
            android:layout_gravity="center"
            android:textSize="18dp"/>
        <TextView
            android:id="@+id/draw_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="#3A404C"
            android:textStyle="bold"
            android:textSize="20dp"/>
    </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="15dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="온도"
                android:textColor="#3A404C"
                android:layout_gravity="center"
                android:textSize="18dp"/>
            <TextView
                android:id="@+id/draw_temper"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="#3A404C"
                android:textStyle="bold"
                android:textSize="20dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="15dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="버전"
                android:textColor="#3A404C"
                android:layout_gravity="center"
                android:textSize="18dp"/>

            <TextView
                android:id="@+id/draw_version"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center_horizontal"
                android:textColor="#3A404C"
                android:textSize="15dp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="추출량"
        android:textSize="25dp"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        />
    <TextView
        android:layout_width="290dp"
        android:layout_gravity="center_horizontal"
        android:layout_height="2dp"
        android:layout_marginTop="5dp"
        android:background="#80838486"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:layout_marginTop="10dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="룽고"
                android:textColor="#3A404C"
                android:layout_gravity="center"
                android:textSize="18dp"/>
            <TextView
                android:id="@+id/draw_coffee_b"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="#3A404C"
                android:textStyle="bold"
                android:textSize="20dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="10dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="에스프레소"
                android:textColor="#3A404C"
                android:layout_gravity="center"
                android:textSize="18dp"/>
            <TextView
                android:id="@+id/draw_coffee_s"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="#3A404C"
                android:textStyle="bold"
                android:textSize="20dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="10dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tea - 대"
                android:textColor="#3A404C"
                android:layout_gravity="center"
                android:textSize="18dp"/>
            <TextView
                android:id="@+id/draw_tea_b"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="#3A404C"
                android:textStyle="bold"
                android:textSize="20dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="10dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tea - 소"
                android:textColor="#3A404C"
                android:layout_gravity="center"
                android:textSize="18dp"/>
            <TextView
                android:id="@+id/draw_tea_s"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="#3A404C"
                android:gravity="center_horizontal"
                android:textStyle="bold"
                android:textSize="20dp"/>
        </LinearLayout>
    </LinearLayout>



    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="75dp"
        android:layout_marginLeft="10dp"
        android:id="@+id/listView">

    </ListView>
</LinearLayout>