<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/logo_color"
    xmlns:android="http://schemas.android.com/apk/res/android" >
    <View
        android:id="@+id/position_view"
        android:layout_width="1px"
        android:layout_height="1px" />
    <FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/logo_color">
    <ImageButton
        android:id="@+id/back"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:background="@drawable/back"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"/>
    <TextView
        android:layout_width="20dp"
        android:layout_height="3dp"
        android:layout_marginTop="225dp"
        android:background="@color/white"/>
        <ImageButton
            android:id="@+id/top_btn"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/tab"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="50dp"
            />
        <LinearLayout
            android:layout_width="110dp"
            android:layout_height="220dp"
            android:orientation="vertical"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="110dp">

            <com.example.blu_main_test1.amount_change_viewpager.VerticalViewPager
                android:id="@+id/view_pager"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                />
        </LinearLayout>
        <ImageButton
            android:id="@+id/bottom_btn"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/tab"
            android:layout_marginTop="340dp"
            android:rotation="180"
            android:layout_marginLeft="50dp"
            />
<LinearLayout
    android:layout_width="210dp"
    android:layout_height="400dp"
    android:background="@xml/product_amount_big"
    android:layout_gravity="right"
    android:backgroundTint="@color/logo_set_color">
</LinearLayout>
    <ImageView
        android:id="@+id/image"
        android:layout_width="330dp"
        android:layout_height="330dp"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="30dp"
       />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="420dp"
        android:layout_marginLeft="30dp">
        <TextView
            android:id="@+id/kind"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="22dp"
            android:textColor="@color/logo_set_color"/>
        <TextView
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="33dp"
            android:fontFamily="@font/notosanscjkkrbold"
            android:layout_marginTop="5dp"
            android:textStyle="bold"
            android:textColor="@color/white"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="추출량"
                android:fontFamily="@font/notosanscjkkrbold"
                android:textSize="24dp"
                android:textColor="@color/white"
                android:layout_marginRight="25dp"
                />
            <TextView
                android:id="@+id/amount"
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:gravity="center"
                android:textSize="23dp"
                android:textColor="@color/logo_color"
                android:background="@xml/amount_ch_edit"
                android:backgroundTint="#D8DBE3"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="원물"
                android:textSize="24dp"
                android:textColor="@color/white"
                android:layout_marginRight="25dp"
                />
            <TextView
                android:id="@+id/origin"
                android:layout_width="270dp"
                android:layout_height="70dp"
                android:gravity="left"
                android:textSize="20dp"
                android:layout_marginLeft="11dp"
                android:textColor="@color/white"
                />
        </LinearLayout>
        <Button
            android:layout_width="200dp"
            android:layout_height="55dp"
            android:text="추출하기"
            android:textColor="@color/logo_color"
            android:textSize="23dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:background="@xml/amount_ch_edit"
            android:backgroundTint="@color/logo_set_color"/>
    </LinearLayout>
<ProgressBar
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:id="@+id/progressBar2"/>
</FrameLayout>
</LinearLayout>