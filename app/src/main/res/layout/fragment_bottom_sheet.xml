<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="-15dp"
    android:layout_marginRight="-15dp"
    android:background="@xml/amount_ch_edit"
    android:backgroundTint="#FFFFFF"
    android:orientation="vertical"
    android:padding="5dp"
    tools:context=".BLE_SCAN.BottomSheet_scan">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp">
        <TextView
            android:text="머신을 찾는 중입니다."
            style="@style/TextAppearance.AppCompat.Headline"
            android:textColor="#091f3f"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="15dp"
        android:src="@drawable/bluetooth"
        android:layout_gravity="center"/>

    <!--listitem_device.xml-->


    <ListView
        android:id="@+id/ble_scan_item"
        android:layout_width="match_parent"
        android:layout_height="150dp"/>

    <!--향후 weight 0.1, button 개수 한 개 될 예정 -->
    <Button
        android:id="@+id/menu_scan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="찾  기" />

    <Button
        android:id="@+id/menu_stop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="찾기중지" />

</LinearLayout>