<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        tools:ignore="MissingConstraints">
        <ImageView
            android:layout_width="280dp"
            android:layout_height="100dp"
            android:src="@drawable/logo"
            tools:ignore="MissingConstraints" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="회원님"
            android:textColor="@color/약관"
            android:layout_marginLeft="18dp"
            android:layout_marginBottom="8dp"
            android:textSize="32dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="환영합니다!"
            android:textColor="@color/약관"
            android:layout_marginLeft="18dp"
            android:textSize="32dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="120dp"
        android:layout_height="wrap_content">
        <CheckBox
            android:id="@+id/total_agree"
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:button="@null"
            android:background="@xml/join_radio"

            android:scaleType="fitXY"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:textColor="@color/black"
            android:text="@string/약관전체"/>
    </LinearLayout>
    <TextView
        android:id="@+id/line2"
        android:layout_width="58mm"
        android:layout_height="1.5dp"
        android:background="#80020202"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <CheckBox
                android:id="@+id/needful_agree1"
                android:layout_width="27dp"
                android:layout_height="27dp"
                android:button="@null"
                android:background="@xml/join_radio"
                android:checked="false"
                android:scaleType="fitXY"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:textColor="@color/black"
            android:text="@string/약관필수1"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">
            <CheckBox
                android:id="@+id/needful_agree2"
                android:layout_width="27dp"
                android:layout_height="27dp"
                android:button="@null"
                android:background="@xml/join_radio"
                android:checked="false"
                android:scaleType="fitXY"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:textColor="@color/black"
                android:text="@string/약관필수2"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">
            <CheckBox
                android:id="@+id/select_agree"
                android:layout_width="27dp"
                android:layout_height="27dp"
                android:button="@null"
                android:background="@xml/join_radio"
                android:checked="false"
                android:scaleType="fitXY"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:textColor="@color/black"
                android:text="@string/약관선택"/>
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="35dp"
            android:textSize="12dp"
            android:textColor="#3A404C"
            android:text="@string/약관선택_sub"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom">
    <Button
        android:id="@+id/next"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="@color/약관btn"
        android:text="다  음"
        android:textSize="21dp"
        android:visibility="invisible"
        android:textColor="@color/white"
        android:onClick="next"
        />
    </LinearLayout>
</LinearLayout>