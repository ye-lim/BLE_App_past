<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="bottom"
   android:id="@+id/background"
    android:background="#80404040">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="520dp"
        android:background="@xml/login_background"
        android:backgroundTint="#011E41"
        android:orientation="vertical"
        android:id="@+id/sub_background"
        tools:ignore="MissingConstraints">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:orientation="vertical">
        <ImageButton
            android:id="@+id/back"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:background="@drawable/back"
            android:layout_gravity="right"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="추출량 변경"
            android:textSize="30dp"
            android:textColor="#ffffff" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Coffee"
            android:textSize="24dp"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="10dp"
            />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginLeft="70dp"
                android:layout_marginTop="20dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="룽고"
                    android:textSize="18dp"
                    android:textColor="#ccffffff"
                    />
                <EditText
                    android:id="@+id/coffee_b_amount"
                    android:layout_width="140dp"
                    android:layout_height="30dp"
                    android:textSize="20dp"
                    android:inputType="number"
                    android:digits="0123456789"
                    android:imeOptions="actionNext"
                    android:gravity="center_horizontal"
                    android:layout_marginLeft="70dp"
                    android:textColor="#3A404C"
                    android:background="@xml/amount_ch_edit"
                    android:maxLength="3"
                    android:backgroundTint="#ffffff"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="25dp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:text="ml"
                    android:layout_marginLeft="10dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="에스프레소"
                    android:textSize="18dp"
                    android:layout_marginLeft="50dp"
                    android:textColor="#ccffffff"
                    />

                <EditText
                    android:id="@+id/coffee_s_amount"
                    android:layout_width="140dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="42dp"
                    android:background="@xml/amount_ch_edit"
                    android:backgroundTint="#ffffff"
                    android:gravity="center_horizontal"
                    android:inputType="number"
                    android:digits="0123456789"
                    android:imeOptions="actionNext"
                    android:maxLength="3"
                    android:textColor="#3A404C"
                    android:textSize="20dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="25dp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:text="ml"
                    android:layout_marginLeft="10dp"/>
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tea"
                android:textSize="24dp"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="25dp"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="79dp"
                android:gravity="center_vertical"
                android:layout_marginTop="20dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="대"
                    android:textSize="18dp"
                    android:textColor="#ccffffff"
                    />
                <EditText
                    android:id="@+id/tea_b_amount"
                    android:layout_width="140dp"
                    android:layout_height="30dp"
                    android:textSize="20dp"
                    android:gravity="center_horizontal"
                    android:layout_marginLeft="77dp"
                    android:textColor="#3A404C"
                    android:maxLength="3"
                    android:inputType="number"
                    android:digits="0123456789"
                    android:imeOptions="actionNext"
                    android:background="@xml/amount_ch_edit"
                    android:backgroundTint="#ffffff"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="25dp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:text="ml"
                    android:layout_marginLeft="10dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="소"
                    android:textSize="18dp"
                    android:layout_marginLeft="50dp"
                    android:textColor="#ccffffff"
                    />
                <EditText
                    android:id="@+id/tea_s_amount"
                    android:layout_width="140dp"
                    android:layout_height="30dp"
                    android:textSize="20dp"
                    android:gravity="center_horizontal"
                    android:layout_marginLeft="76dp"
                    android:textColor="#3A404C"
                    android:maxLength="3"
                    android:inputType="number"
                    android:digits="0123456789"
                    android:imeOptions="actionNext"
                    android:background="@xml/amount_ch_edit"
                    android:backgroundTint="#ffffff"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="25dp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:text="ml"
                    android:layout_marginLeft="10dp"/>
            </LinearLayout>
            <Button
                android:id="@+id/sub_amount"
                android:layout_width="250dp"
                android:layout_height="45dp"
                android:text="적용하기"
                android:textSize="20dp"
                android:layout_marginTop="40dp"
                android:layout_gravity="center_horizontal"
                android:background="@xml/login_id"
                android:backgroundTint="#F3CA7E"
                android:textColor="#011E41"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>